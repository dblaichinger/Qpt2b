<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  
  <link href='http://fonts.googleapis.com/css?family=News+Cycle' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag  'jquery.scrollTo-min', 'jquery.cookie', 'jquery-ui', 'jquery.reversegeocode.min', 'gears_init', 'jquery.class.min', 'editor' %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
  <%= stylesheet_link_tag :all %>
</head>
<body>
<div id="cat"></div>
<% flash.each do |key, value| %>			
				<div class="flash <%= key %>">
					<%= value %>
				</div>
<% end %>


<div id="wrapper">
	<nav>
	    <div id="logo">
	            <%= link_to image_tag("/images/media/logo.png", :border=>0), :controller => 'pages', :action => 'home' %>
	    </div>
	        
	    <ul id="nav_haupt">
	        <% if controller?("pages") && action?("home")  %>
	        <li class="active">
	        <%else%><li><% end %>
	        <%=link_to 'Patenschaft', pages_home_path %></li>
	        
	       	<% if controller?("pages") && action?("info")  %>
	        <li class="active">
	        <%else%><li><% end %>
	        <%=link_to 'Information', pages_info_path %></li>
	        
	        <% if controller?("demands") && action?("index")  %>
	        <li class="active">
	        <%else%><li><% end %>
	        <%= link_to 'Voting', demands_path %></li>
	        
	        <% if controller?("admins") && action?("index") %>
	        <li class="active">
	        <% elsif controller?("trashcans") && action?("edit") %>
	        <li class="active">
	        <% elsif controller?("demands") && action?("edit") %>
	        <li class="active">
	        <%else%><li><% end %>
	        <%=link_to '(Admin)', admins_path  %> </li>
	    </ul>
	        
	    <ul id="nav_klein">
	        <li><%=link_to 'Kontakt', pages_home_path %></li>
	        <li>|</li>
	        <li> <%=link_to 'FAQs', pages_home_path %> </li>
	   </ul>
	</nav>


<%= yield %>
<%= yield :scripts %>

</div>

	<% 	if !controller?("admins") && !action?("index")
	  		render 'layouts/footer' 
	 	end
	 	
	   	if !controller?("trashcans") && !action?("index")
	     	render 'layouts/footer' 
		end
	%>
	


</body>
</html>
